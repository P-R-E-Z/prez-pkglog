*.sh      text eol=lf
*.service text eol=lf
*.md      text eol=lf
*.toml    text eol=lf
*.json    text eol=lf
*.yaml    text eol=lf
*.yml     text eol=lf
*.ini     text eol=lf
*.conf    text eol=lf
*.cmake   text eol=lf
CMakeLists.txt text eol=lf

# C/C++ sources
*.cpp     text eol=lf
*.cc      text eol=lf
*.cxx     text eol=lf
*.c       text eol=lf
*.h       text eol=lf
*.hpp     text eol=lf

# Treat macOS artifacts as binary
*.DS_Store binary

# Binary files
*.so   binary
*.o    binary
*.a    binary
*.dylib binary
*.dll  binary
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.tar  binary
*.gz   binary
*.xz   binary

# GitHub linguist overrides (optional)
# Mark build directories and vendored artifacts if needed
libdnf5-plugin/dnf5-plugin/build/* linguist-generated
